@using Universal.Core;

@model Universal.Entities.SysRole
@{
    ViewData["Title"] = "编辑角色";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("mainIndex")">首页</a>
        </li>
        <li><a href="@Url.Action("index","role")">角色列表</a></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>

<div class="page-content">
    <h1>@ViewBag.Title</h1>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="editrole" asp-controller="role" asp-area="admin" method="post" class="form-horizontal">
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">角色名称 @Html.RequiredSpan()</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="Name" class="col-xs-10 col-sm-5" />
                        <span asp-validation-for="Name" class="inline text-danger "></span>
                    </div>
                </div>
                <div class="col-md-offset-2 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        提交
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
